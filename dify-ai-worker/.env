# ---- Core URLs used by Dify components ----
# Point these to your API container (which runs on port 5001 by default)
CONSOLE_API_URL=http://host.docker.internal:5001
SERVICE_API_URL=http://host.docker.internal:5001
CONSOLE_WEB_URL=http://host.docker.internal:3000

# ---- Postgres ----
DB_USERNAME=postgres
DB_PASSWORD=change_me
DB_HOST=host.docker.internal
DB_PORT=5432
DB_DATABASE=dify

# ---- Redis (cache & celery broker) ----
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
REDIS_PASSWORD=change_me

# Celery broker URL (Redis DB index 1 is typical)
CELERY_BROKER_URL=redis://host.docker.internal:6379/0

# ---- Storage ----
# Use local storage and mount the same host path at /app/api/storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/temp/storage

# ---- Worker tuning (optional) ----
CELERY_WORKER_AMOUNT=1
LOG_LEVEL=INFO
